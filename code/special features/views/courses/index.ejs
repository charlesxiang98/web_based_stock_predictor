<% include ../partials/header %>

    <header class="jumbotron">
        <div class="container">
            <h2><strong>ðŸš€ Rocket, Rutgers stOCK forEcasTer</strong></h2>
            <p>Best stock forcast tool to boost your wealth!</p>
                <a class="btn btn-primary pull-right" href="/courses/new">Add New Stock</a>
        </div>
     </header>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
         <div class="col-md-12">
                <% if(noMatch == "No results foundðŸ˜¥Please try again") { %>
                    <h2><%= noMatch %></h2>
                <% } %>
            </div>
        <% courses.forEach(function(course){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= course.image %>">
                   <div class="caption">
                            <h4><%= course.name %></h4>
                        <% if (course.rating === 0) { %>
                            <em>No reviews yet.</em>
                        <% } else { %>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star <% if (course.rating > 1.5) { %> checked <% } %>"></span>
                            <span class="fa fa-star <% if (course.rating > 2.5) { %> checked <% } %>"></span>
                            <span class="fa fa-star <% if (course.rating > 3.5) { %> checked <% } %>"></span>
                            <span class="fa fa-star <% if (course.rating > 4.5) { %> checked <% } %>"></span>
                        <% } %>
                   </div>
                   <p>
                       <a href="/courses/<%= course._id %>" class="btn btn-primary">More</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>

    <div class="row text-center">
        <% if (pages && pages > 0) { %>
        <ul class="pagination text-center">
            <% if (current == 1) { %>
            <li class="disabled"><a>First</a></li>
            <% } else { %>
            <li><a href="/courses">First</a></li>
            <% } %>
     
            <% if (current == 1) { %>
            <li class="disabled"><a> < </a></li>
            <% } else { %>
            <li><a href="/courses?page=<%= Number(current) - 1 %>"> < </a></li>
            <% } %>
     
            <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
            <% if (i !== 1) { %>
            <li class="disabled"><a>...</a></li>
            <% } %>
            <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
            <% if (i == current) { %>
            <li class="active"><a><%= i %></a></li>
            <% } else { %>
            <li><a href="/courses?page=<%= i %>"><%= i %></a></li>
            <% } %>
            <% if (i == Number(current) + 4 && i < pages) { %>
            <li class="disabled"><a>...</a></li>
            <% } %>
            <% } %>
     
            <% if (current == pages) { %>
            <li class="disabled"><a> > </a></li>
            <% } else { %>
            <li><a href="/courses?page=<%= Number(current) + 1 %>"> > </a></li>
            <% } %>
     
            <% if (current == pages) { %>
            <li class="disabled"><a>Last</a></li>
            <% } else { %>
            <li><a href="/courses?page=<%= pages %>">Last</a></li>
            <% } %>
        </ul>
        <% } %>
    </div>

<% include ../partials/footer %>